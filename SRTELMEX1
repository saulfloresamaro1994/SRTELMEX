            width: 100%;
            height: auto;
        }

        #closePlayer {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #e50914;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            font-size: 14px;
            border-radius: 5px;
        }

        #closePlayer:hover {
            background-color: #f40612;
        }

        /* Fondo oscuro detrás del reproductor */
        #overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            z-index: 999;
            display: none;
        }

        /* Botón de Chromecast */
        #castButton {
